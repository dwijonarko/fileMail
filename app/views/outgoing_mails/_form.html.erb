<%= form_for(@outgoing_mail, :html =>{ :multipart=>true}) do |f| %>
<div class="field">
<table>
	<tr>
		<td>Nomor Surat</td><td><%= f.text_field :code, :class => "text-input small-input" %>
		<span id="generate_link"><a href="/generator" id="generate" class="button">Generate Nomor Surat</a></span></td>
	</tr>
	<tr>
		<td>Dari</td><td><%= f.text_field :from , :class => "text-input small-input" %></td>
	</tr>
	<tr>
		<td>Untuk</td><td><%= f.text_field :to , :class => "text-input small-input"%></td>
	</tr>
	<tr>
		<td>Perihal</td><td><%= f.text_field :concern , :class => "text-input small-input"%></td>
	</tr>
	<tr>
		<td>Tanggal</td><td><%= f.text_field :date , :class => "text-input small-input" %></td>
	</tr>
	<tr>
		<td>Keterangan</td><td><%= f.text_area :explanation, :cols=>35, :rows=>6 , :class => "wysiwyg", :style=>"width: 653px;"%></td>
	</tr>
	<tr>
		<td>File</td><td><%= f.file_field :attachment %></td>
	</tr>
	<tr>
		<td></td>
		<td><%= f.submit "Save"  , :class => 'button'%>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Back', outgoing_mails_path,:class=>'button' %></td>
	</tr>
</table>
</div>
<% end %>